javascript:
  window.routesArray = [];

#canvas[style="width: 100%; height: 100%"]
  #map-canvas



  #routes
    = link_to "Adicionar novo percurso", new_route_path, class: :button
    ol
    - @routes.each do |route|
      li
        span
          = route.insertions
          |&nbsp;
          = route.fullname.split(',')[0]

      javascript:
        window.routesArray.push({ 
        title: "#{route.fullname}", 
        lat: "#{route.lat}", 
        long: "#{route.long}", 
        icon: "#{image_url("pin_#{route.transport}.png")}" });


javascript:

  function initialize(){

    var myOptions = {
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      zoom: 12,
      center: new google.maps.LatLng(-22.911589, -43.357264),
    };
    var map = new google.maps.Map(document.getElementById("map-canvas"), myOptions);


    for (i = 0; i < window.routesArray.length; i++) { 
      var marker = new google.maps.Marker({
        position: new google.maps.LatLng(window.routesArray[i].lat, window.routesArray[i].long),
        icon: window.routesArray[i].icon,
        map: map,
        title: window.routesArray[i].title
      });
    }

  };
  google.maps.event.addDomListener(window, 'load', initialize);
